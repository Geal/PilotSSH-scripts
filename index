#!/usr/bin/env sh
cd ~/.pilotssh;

result='{ "version": 1, "title": "Commands", "type":"commands", "values" : ['
first=true

for entry in *
do
  if [ -d "$entry" ];then
    if [ $first ];then
      first=;
    else
      result=$result",";
    fi
    if [ -f "$entry/command.json" ];then
      cmd=`cat $entry/command.json`
      result=$result$cmd
    fi
  fi
done

result=$result" ]}"

echo $result
